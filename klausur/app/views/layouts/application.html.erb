<!DOCTYPE html>
<html>
  <head>
    <title>Klausur</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar container is-dark">
      <div class="navbar-brand">Klausur 2020</div>
      <div class="navbar-menu">
        <div class="navbar-start">
          <a href="<%= root_path %>" class="navbar-item is-active">Patienten</a>
          <a href="<%= @doctors %>" class="navbar-item is-active">Doktoren</a>
          <a href="<%= @laboratories %>" class="navbar-item is-active">Labore</a>
        </div>
      </div>
    </nav>
    <main class="container">
      <div class="row">
        <div class="column">
          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
