<p id="notice"><%= notice %></p>

<h1>Infections</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infections.each do |infection| %>
      <tr>
        <td><%= infection.name %></td>
        <td><%= infection.patient_id %></td>
        <td><%= link_to 'Show', infection %></td>
        <td><%= link_to 'Edit', edit_infection_path(infection) %></td>
        <td><%= link_to 'Destroy', infection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Infection', new_infection_path %>
